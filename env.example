# API Keys
OPENAI_API_KEY=your_openai_api_key_here
HUGGINGFACE_API_KEY=your_huggingface_api_key_here

# Application Settings
DEBUG=false
DEFAULT_MODEL=gpt-3.5-turbo
USE_OPENAI=false  # Set to false to use Ollama or HuggingFace

# Database Settings
DB_TYPE=sqlite  # Options: sqlite, postgres, neo4j
DB_PATH=example.sqlite  # For SQLite

# PostgreSQL Settings (only used if DB_TYPE=postgres)
PG_HOST=localhost
PG_PORT=5432
PG_DATABASE=conversdb
PG_USER=postgres
PG_PASSWORD=postgres

# Neo4j Settings (only used if DB_TYPE=neo4j)
NEO4J_URI=bolt://localhost:7687
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=password
NEO4J_DATABASE=neo4j
NEO4J_DOCUMENT_LABEL=Document
NEO4J_VECTOR_INDEX=document_embeddings

# Ollama Settings
OLLAMA_MODEL=llama3.2:3b  # Use Llama 3.2 3B model
OLLAMA_HOST=http://localhost:11434  # Ollama server URL

# HuggingFace Settings
HF_MODEL=meta-llama/Llama-3.2-3B  # HuggingFace model ID 